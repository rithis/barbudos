.rolled-cart
  margin 10px 0
  padding 0 8px
  responsive text-align center same left
  clearfix()

  .rolled-cart-button
    phone float right
    display inline-block
    margin-left 30px
    responsive padding, 3px 12px, same, 2px 10px
    border 1px solid #980000
    border-radius 5px
    background-color #fc402b
    background-image linear-gradient(top, #ff8056, #f80000)
    box-shadow inset 0 1px 0 0 #ffd4c5
    text-decoration none
    text-shadow 0 1px 0 rgba(0, 0, 0, .5)
    responsive serif 16px same 14px
    color white
